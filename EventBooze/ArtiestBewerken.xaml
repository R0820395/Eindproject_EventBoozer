<Window x:Class="EventBooze.ArtiestBewerken"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EventBooze"
        mc:Ignorable="d"
        Title="ArtiestBewerken" Height="450" Width="400" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
          
        </Grid.RowDefinitions>
        <Button Grid.Column="0" Grid.Row="1" Content="terug"/>
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2">
            <Label Content="Artiest naam"/>
            <TextBox x:Name="txtArtiest"/>
            <Label Content="Telefoonnummer"/>
            <TextBox x:Name="txtTelefoonnummer" />
            <Label Content="Email"/>
            <TextBox x:Name="Email"/>
            <Label Content="Bankaccount"/>
            <TextBox x:Name="txtBankaccount"/>
        </StackPanel>
        
        <Button x:Name="btnSave" Grid.Column="1" Grid.Row="4" Content="save" Click="btnSave_Click"/>
    </Grid>
</Window>
